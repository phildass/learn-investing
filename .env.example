# Environment Variables Template
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://learn-investing.iiskills.cloud
NEXT_PUBLIC_SITE_NAME=Learn Investing

# Email Configuration (for notifications)
EMAIL_FROM=no-reply@iiskill.in
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# Payment Gateway (UPI Mock)
PAYMENT_GATEWAY_KEY=your_payment_gateway_key
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# Admin Credentials
ADMIN_PASSWORD_HASH=your_hashed_password_for_phil123

# API Keys for Market Data
MARKET_DATA_API_KEY=your_market_data_api_key
NEWS_API_KEY=your_news_api_key

# Node Environment
NODE_ENV=development
